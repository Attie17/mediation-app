{
  "name": "mediation-app-root",
  "private": true,
  "scripts": {
    "kill": "taskkill /F /IM node.exe 2>nul || echo No Node processes to kill",
    "start": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "restart": "npm run kill; npm run start",
    "dev": "npm run start",
    "backend": "npm run dev --prefix backend",
    "frontend": "npm run dev --prefix frontend",
    "get-jwt": "powershell -ExecutionPolicy Bypass -File ./get-jwt.ps1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "eslint": "^9.36.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "postcss": "^8.5.6"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@fontsource/inter": "^5.2.8",
    "@fontsource/roboto": "^5.2.8",
    "@mui/material": "^7.3.2",
    "@plasmicapp/loader": "^0.0.59",
    "@plasmicapp/loader-react": "^1.0.399",
    "@plasmicapp/react-web": "^0.2.403",
    "@supabase/supabase-js": "^2.58.0",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.544.0",
    "multer": "^2.0.2",
    "pg": "^8.12.0",
    "shadcn-ui": "^0.9.5"
  }
}
