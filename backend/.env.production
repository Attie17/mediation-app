# Backend Production Environment
NODE_ENV=production
PORT=4000
HOST=0.0.0.0

# Production Database (Railway/AWS RDS/etc)
DATABASE_URL=postgresql://user:password@production-host:5432/mediation_prod
DATABASE_HOST=production-host
DATABASE_PORT=5432
DATABASE_NAME=mediation_prod
DATABASE_USER=production_user
DATABASE_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Production JWT Secret (MUST BE CHANGED!)
JWT_SECRET=CHANGE_ME_TO_SECURE_RANDOM_STRING_MIN_32_CHARS
DEV_JWT_SECRET=

# Production Frontend URL
FRONTEND_URL=https://yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email (SendGrid Production)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASSWORD=YOUR_SENDGRID_API_KEY
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Mediation Platform

# File Storage (Cloudinary Production)
CLOUDINARY_CLOUD_NAME=YOUR_CLOUD_NAME
CLOUDINARY_API_KEY=YOUR_API_KEY
CLOUDINARY_API_SECRET=YOUR_API_SECRET

# Session
SESSION_SECRET=CHANGE_ME_STRONG_RANDOM_STRING_MIN_32_CHARS
SESSION_MAX_AGE=86400000

# Rate Limiting (Strict for Production)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security (Dev Mode Disabled)
ENABLE_DEV_MODE=false
ALLOWED_DEV_ROLES=

# Logging
LOG_LEVEL=error
LOG_FILE_PATH=./logs/production.log

# Sentry (Error Tracking)
SENTRY_DSN=YOUR_SENTRY_DSN_URL

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=true
