# Backend Development Environment
NODE_ENV=development
PORT=4000
HOST=localhost

# Local PostgreSQL Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mediation_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mediation_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Development JWT Secrets (CHANGE IN PRODUCTION!)
JWT_SECRET=dev-jwt-secret-for-local-development-only-do-not-use-in-prod
DEV_JWT_SECRET=dev-jwt-secret-for-local-testing-only

# Local Frontend
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:5174

# Email (Dev Mode - Logs to Console)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=dev@mediation.local
FROM_NAME=Mediation Platform (Dev)

# File Storage (Local/Dev)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Session
SESSION_SECRET=dev-session-secret-change-in-production
SESSION_MAX_AGE=86400000

# Rate Limiting (Relaxed for Dev)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Security (Dev Mode Enabled)
ENABLE_DEV_MODE=true
ALLOWED_DEV_ROLES=admin,mediator,lawyer,divorcee

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/dev.log

# Feature Flags (All Enabled in Dev)
ENABLE_AI_FEATURES=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_NOTIFICATIONS=true
